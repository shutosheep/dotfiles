#! /bin/sh

mute="$(pamixer --get-mute)"
vol="$(pamixer --get-volume)"

if [ "$mute" = "true" ]; then
    icon="ðŸ”‡"
    echo "$icon ($vol%)"
    exit 0
fi

if [ "$vol" -ge "60" ]; then
    icon="ðŸ”Š"
elif [ "$vol" -ge "30" ]; then
    icon="ðŸ”‰"
elif [ "$vol" -ge "0" ]; then
    icon="ðŸ”ˆ"
else
    icon="ðŸ”‡"
fi

echo "$icon $vol%"
