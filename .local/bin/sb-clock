#! /bin/sh

case "$(date +%I)" in
        "00") clock="ğŸ•›" ;;
        "01") clock="ğŸ•" ;;
        "02") clock="ğŸ•‘" ;;
        "03") clock="ğŸ•’" ;;
        "04") clock="ğŸ•“" ;;
        "05") clock="ğŸ•”" ;;
        "06") clock="ğŸ••" ;;
        "07") clock="ğŸ•–" ;;
        "08") clock="ğŸ•—" ;;
        "09") clock="ğŸ•˜" ;;
        "10") clock="ğŸ•™" ;;
        "11") clock="ğŸ•š" ;;
        "12") clock="ğŸ•›" ;;
esac

calender="ğŸ—“"

time=$(date "+$calender %h %d %a $clock %I:%M %p")

echo "$time"
