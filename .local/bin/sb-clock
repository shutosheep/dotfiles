#! /bin/sh

. "${HOME}/.cache/wal/colors.sh"

clock=$(date '+%I')
current=$(date "+%I%M")

case "$clock" in
        "00") icon="ğŸ•›" ;;
        "01") icon="ğŸ•" ;;
        "02") icon="ğŸ•‘" ;;
        "03") icon="ğŸ•’" ;;
        "04") icon="ğŸ•“" ;;
        "05") icon="ğŸ•”" ;;
        "06") icon="ğŸ••" ;;
        "07") icon="ğŸ•–" ;;
        "08") icon="ğŸ•—" ;;
        "09") icon="ğŸ•˜" ;;
        "10") icon="ğŸ•™" ;;
        "11") icon="ğŸ•š" ;;
        "12") icon="ğŸ•›" ;;
esac

time=$(date "+%I:%M:%S %p")

echo "$icon $time"

if [ $current -ge "2245" ] &&
    [ $current -le "2359" ]; then
    dunstify -h string:bgcolor:$color0 -h string:fgcolor:$color15 -h string:frcolor:$color2 -h string:hlcolor:$color2 -t 5000 -r 31 "ğŸ˜ª It's bedtime!"
fi
